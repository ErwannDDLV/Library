<div class="wrapper">
    <div class="container">
        <div class="col-xs-12">
            
            <%= simple_form_for @user, html: {multipart: true} do |f| %>
                <div class="form-group">
                    <%= f.input :first_name %>
                    <%= f.input :last_name %>
                    <%= f.input :email %>
                </div>
                <div class="form-group">
                    <%= f.label :image %>
                    <%= f.file_field :avatar, class:"form-control" %>
                </div>
                <div class="actions">
                    <%= f.button :submit %>
                </div>
            <% end %>
        </div>
    </div>
</div>


