<div id="wrapper-top">
    <div class="head-container">
        
    </div>
    <div class="head-container">
        <div class="col-xs-2">
            <%= link_to 'Back', url_for(:back), class: 'btn-back' %></div>
        <div class="col-xs-8">
            <h1>USERS LIST : You have <%= @users.count%> users</h1>
        </div>
        <div class="col-xs-2">
            <%= button_to "Add a User", new_user_path, class: "btn-edit", method: :get %>
        </div>
    </div>
</div>
<div id="wrapper">
    <div class="container">
        <div class="row">
            <% @users.each do |user| %>
                <div class="col-xs-12 col-sm-6">
                    <div class="global-card">
                        <%= link_to user_path(user) do %>
                            <div class="card">
                                <div class="card-name">
                                    <h2><%= "#{user.first_name}  #{user.last_name}"%></h2>
                                    <p>User.book.count</p>
                                </div>
                                <div class="card-user">
                                    <%= image_tag user.avatar.url(:thumb), class: "avatar-lg"%>
                                </div> 
                            </div>
                        <% end %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>